<?xml version="1.0" encoding="UTF-8"?>
<web-app>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>webapp.root</param-value>
	</context-param>

	<listener>
		<listener-class>com.zd.core.listener.ContextPathListener</listener-class>
	</listener>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/config/*.xml,/WEB-INF/config/cache/*.xml,/WEB-INF/config/dbsy/*.xml</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/config/log4j.properties</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>

	<listener>
		<listener-class>com.zd.core.listener.ClassLoaderListener</listener-class>
	</listener>

	<listener>
		<listener-class>com.zd.core.listener.ThreadStartListener</listener-class>
	</listener>
	<context-param>
		<param-name>initThreadBeanName</param-name>
		<param-value></param-value>
	</context-param>

	<filter>
		<filter-name>loginValidation</filter-name>
		<filter-class>com.zd.core.filter.LoginValidationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>loginValidation</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>CharacterEncoding</filter-name>
		<filter-class>com.zd.core.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncoding</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>CharacterEncoding</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>NullFilter</filter-name>
		<filter-class>com.zd.core.filter.NullFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>NullFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>
				/WEB-INF/struts-config/rbac-struts-config.xml,
				/WEB-INF/struts-config/dbsy-struts-config.xml,
				/WEB-INF/struts-config/base-struts-config.xml,
				/WEB-INF/struts-config/bank-struts-config.xml,
				/WEB-INF/struts-config/finance-struts-config.xml,
				/WEB-INF/struts-config/region-struts-config.xml,
				/WEB-INF/struts-config/supervisormanagement-struts-config.xml,
				/WEB-INF/struts-config/business-struts-config.xml,
				/WEB-INF/struts-config/repository-struts-config.xml,
				/WEB-INF/struts-config/supervisor-struts-config.xml,
				/WEB-INF/struts-config/market-struts-config.xml,
				/WEB-INF/struts-config/roster-struts-config.xml,
				/WEB-INF/struts-config/message-struts-config.xml,
				/WEB-INF/struts-config/file-test.xml,
				/WEB-INF/struts-config/ledger-struts-config.xml,
				/WEB-INF/struts-config/planandreport-struts-config.xml,
				/WEB-INF/struts-config/windcontrol-struts-config.xml,
				/WEB-INF/struts-config/attendance-struts-config.xml,
				/WEB-INF/struts-config/salary-struts-config.xml,
				/WEB-INF/struts-config/supervisormessage-struts-config.xml,
				/WEB-INF/struts-config/messageAndWaring-struts-config.xml,
				/WEB-INF/struts-config/zxbank-struts-config.xml
			</param-value>
		</init-param>

		<init-param>
			<param-name>debug</param-name>
			<param-value>3</param-value>
		</init-param>
		<init-param>
			<param-name>detail</param-name>
			<param-value>3</param-value>
		</init-param>

		<init-param>
			<param-name>path</param-name>
			<param-value></param-value>
		</init-param>

		<init-param>
			<param-name>validating</param-name>
			<param-value>false</param-value>
		</init-param>

		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<!-- 配置Xfire -->
	<servlet>
		<servlet-name>XFireServlet</servlet-name>
		<servlet-class>
			org.codehaus.xfire.spring.XFireSpringServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>XFireServlet</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>
	<jsp-config>
		<taglib>
			<taglib-uri>select.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/comall/select.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>table.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/comall/table.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>form.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/comall/form.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>file.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/comall/file.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>url.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/comall/url.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>thumbpage.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/comall/thumbpage.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>struts-bean.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/struts-bean.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>struts-html.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/struts-html.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>struts-logic.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/struts-logic.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>struts-nested.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/struts-nested.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>struts-template.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/struts-template.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>struts-tiles.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/struts-tiles.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>c.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/c.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>sql.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/sql.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>fmt.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/fmt.tld</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>c-1_0-rt.tld</taglib-uri>
			<taglib-location>/WEB-INF/tld/c-1_0-rt.tld</taglib-location>
		</taglib>
	</jsp-config>
	<error-page>
		<error-code>404</error-code>
		<location>/common/404.html</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/common/500.html</location>
	</error-page>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<!-- tomcat集群 -->
	<distributable />
</web-app>
