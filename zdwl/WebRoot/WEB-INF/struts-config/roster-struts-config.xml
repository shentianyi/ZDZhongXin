<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

	<form-beans>
		<form-bean name="rosterForm" type="com.zd.csms.roster.web.form.RosterForm"></form-bean>
	</form-beans>
	
  <global-forwards>
    <forward name="error" path="/common/500error.jsp" />
  </global-forwards> 
  
	<action-mappings>
		<action path="/roster" 
		    name="rosterForm" 
		    parameter="method" 
		    type="com.zd.csms.roster.web.action.RosterAction"
		    scope="request">
			<forward name="roster_list" path="/WEB-INF/jsp/roster/roster_list.jsp"/>
			<forward name="add_roster" path="/WEB-INF/jsp/roster/add_roster.jsp"/>
			<forward name="upd_roster" path="/WEB-INF/jsp/roster/upd_roster.jsp"/>
			<forward name="add_postChange" path="/WEB-INF/jsp/roster/add_roster_postChange.jsp"/>
			<forward name="upd_postChange" path="/WEB-INF/jsp/roster/upd_roster_postChange.jsp"/>
			<forward name="postChange_list" path="/WEB-INF/jsp/roster/roster_postChange_list.jsp"/>
			<forward name="detail_roster" path="/WEB-INF/jsp/roster/detail_roster.jsp"/>
		</action>
	</action-mappings>
	
</struts-config>