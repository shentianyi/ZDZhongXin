<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

	<form-beans>
		<form-bean name="messageForm" type="com.zd.csms.message.web.form.MessageForm"></form-bean>
		<form-bean name="noticeContentForm" type="com.zd.csms.message.web.form.NoticeContentForm"></form-bean>
		<form-bean name="noticeForm" type="com.zd.csms.message.web.form.NoticeForm"></form-bean>
	</form-beans>
	
  <global-forwards>
    <forward name="error" path="/common/500error.jsp" />
  </global-forwards> 
  
	<action-mappings>
		<action path="/message" 
		    name="messageForm" 
		    parameter="method" 
		    type="com.zd.csms.message.web.action.MessageAction"
		    scope="request">
			<forward name="message_list" path="/WEB-INF/jsp/message/message/message_list.jsp"/>
			<forward name="warning_list" path="/WEB-INF/jsp/message/message/warning_list.jsp"/>
			<forward name="message_page_list" path="/WEB-INF/jsp/message/message/message_page_list.jsp"/>
			<forward name="warning_page_list" path="/WEB-INF/jsp/message/message/warning_page_list.jsp"/>
			
			<forward name="notice_list" path="/WEB-INF/jsp/message/message/notice_list.jsp"/>
			<forward name="system_list" path="/WEB-INF/jsp/message/message/system_list.jsp"/>
			
		</action>
		
		<action path="/notice" 
		    name="noticeForm" 
		    parameter="method" 
		    type="com.zd.csms.message.web.action.NoticeAction"
		    scope="request">
			<forward name="notice_list" path="/WEB-INF/jsp/message/notice/notice_list.jsp"/>
			<forward name="notices_list" path="/WEB-INF/jsp/message/notice/notices_list.jsp"/>
		</action>
		
		<action path="/notice/noticeContent" 
		    name="noticeContentForm" 
		    parameter="method" 
		    type="com.zd.csms.message.web.action.NoticeContentAction"
		    scope="request">
		    <forward name="add_NoticeContent" path="/WEB-INF/jsp/message/noticeContent/add_noticeContent.jsp"/>
		    <forward name="upd_noticeContent" path="/WEB-INF/jsp/message/noticeContent/upd_noticeContent.jsp"/>
		    <forward name="detail" path="/WEB-INF/jsp/message/noticeContent/detail_noticeContent.jsp"/>
		    <forward name="approval" path="/WEB-INF/jsp/message/noticeContent/approval.jsp"/>
			<forward name="list_wait_approval" path="/WEB-INF/jsp/message/noticeContent/list_wait_approval.jsp"/>
			<forward name="list_already_approval" path="/WEB-INF/jsp/message/noticeContent/list_already_approval.jsp"/>
		</action>
		
		<action path="/message/BillingNoCarMessage" 
		    name="messageForm" 
		    parameter="method" 
		    type="com.zd.csms.message.url.BillingNoCarMessage"
		    scope="request">
			<forward name="billno7" path="/WEB-INF/jsp/message/message/billno7.jsp"/>
			<forward name="billno15" path="/WEB-INF/jsp/message/message/billno15.jsp"/>
		</action>
		<action path="/message/Billing30nofullMessage" 
		    name="messageForm" 
		    parameter="method" 
		    type="com.zd.csms.message.url.Billing30nofullMessage"
		    scope="request">
			<forward name="billing30nofull" path="/WEB-INF/jsp/message/message/billing30nofull.jsp"/>
		</action>
		<action path="/message/Expire7dayMessage" 
		    name="messageForm" 
		    parameter="method" 
		    type="com.zd.csms.message.url.Expire7dayMessage"
		    scope="request">
			<forward name="expire7day" path="/WEB-INF/jsp/message/message/expire7day.jsp"/>
		</action>
		<action path="/message/ExpirethedayMessage" 
		    name="messageForm" 
		    parameter="method" 
		    type="com.zd.csms.message.url.ExpirethedayMessage"
		    scope="request">
			<forward name="expiretheday" path="/WEB-INF/jsp/message/message/expiretheday.jsp"/>
		</action>
		<action path="/message/ExpirenotclearMessage" 
		    name="messageForm" 
		    parameter="method" 
		    type="com.zd.csms.message.url.ExpirenotclearMessage"
		    scope="request">
			<forward name="expirenotclear" path="/WEB-INF/jsp/message/message/expirenotclear.jsp"/>
		</action>
		<action path="/message/NostockNodraft" 
		    name="messageForm" 
		    parameter="method" 
		    type="com.zd.csms.message.url.NostockNodraftMessage"
		    scope="request">
			<forward name="nostocknodraft" path="/WEB-INF/jsp/message/message/nostocknodraft.jsp"/>
		</action>
		<action path="/message/LastBusiness" 
		    name="messageForm" 
		    parameter="method" 
		    type="com.zd.csms.message.url.LastBusinessMessage"
		    scope="request">
			<forward name="lastBusiness" path="/WEB-INF/jsp/message/message/lastBusiness.jsp"/>
		</action>
		<action path="/message/Continuity3outMessage" 
		    name="messageForm" 
		    parameter="method" 
		    type="com.zd.csms.message.url.Continuity3outMessage"
		    scope="request">
			<forward name="continuity3out" path="/WEB-INF/jsp/message/message/continuity3out.jsp"/>
		</action>
		<action path="/message/Nowork3dayMessage" 
		    name="messageForm" 
		    parameter="method" 
		    type="com.zd.csms.message.url.Nowork3dayMessage"
		    scope="request">
			<forward name="nowork3day" path="/WEB-INF/jsp/message/message/nowork3day.jsp"/>
		</action>
		<action path="/message/Move30dayMessage" 
		    name="messageForm" 
		    parameter="method" 
		    type="com.zd.csms.message.url.Move30dayMessage"
		    scope="request">
			<forward name="move30day" path="/WEB-INF/jsp/message/message/move30day.jsp"/>
		</action>
		<action path="/message/supMaMsg" 
		    name="messageForm" 
		    parameter="method" 
		    type="com.zd.csms.message.url.SupervisorManagementMessage"
		    scope="request">
			<forward name="handoverPlanInfo" path="/WEB-INF/jsp/message/supervisorManagement/handoverPlanInfo.jsp"/>
			<forward name="supervisionFeeList" path="/WEB-INF/jsp/message/supervisorManagement/supervisionFeeList.jsp"/>
			<forward name="supervisorAttendanceList" path="/WEB-INF/jsp/message/supervisorManagement/supervisorAttendanceList.jsp"/>
			<forward name="noExecuteHandoverPlan" path="/WEB-INF/jsp/message/supervisorManagement/noExecuteHandoverPlan.jsp"/>
			<forward name="supervisorSignInAbnormal" path="/WEB-INF/jsp/message/supervisorManagement/supervisorSignInAbnormal.jsp"/>
			<forward name="supervisorSignOutAbnormal" path="/WEB-INF/jsp/message/supervisorManagement/supervisorSignOutAbnormal.jsp"/>
			<forward name="projectCircuNoSupervisor" path="/WEB-INF/jsp/message/supervisorManagement/projectCircuNoSupervisor.jsp"/>
			<forward name="repositoryNoTrain" path="/WEB-INF/jsp/message/supervisorManagement/repositoryNoTrain.jsp"/>
			<forward name="repFifteenDaysNoPost" path="/WEB-INF/jsp/message/supervisorManagement/repFifteenDaysNoPost.jsp"/>
			<forward name="resignNoHandoverLog" path="/WEB-INF/jsp/message/supervisorManagement/resignNoHandoverLog.jsp"/>
			<forward name="supWorkFiveMonth" path="/WEB-INF/jsp/message/supervisorManagement/supWorkFiveMonth.jsp"/>
			<forward name="supervisorThreeDaySignAbnormal" path="/WEB-INF/jsp/message/supervisorManagement/supervisorThreeDaySignAbnormal.jsp"/>
			<forward name="projectCircuNoSupervisorWarning" path="/WEB-INF/jsp/message/supervisorManagement/projectCircuNoSupervisorWarning.jsp"/>
			<forward name="postNoTrain" path="/WEB-INF/jsp/message/supervisorManagement/postNoTrain.jsp"/>
			<forward name="repositoryNoTrainWarning" path="/WEB-INF/jsp/message/supervisorManagement/repositoryNoTrainWarning.jsp"/>
			<forward name="resignNoHandoverLogWarning" path="/WEB-INF/jsp/message/supervisorManagement/resignNoHandoverLogWarning.jsp"/>
			<forward name="supWorkSixMonthWarning" path="/WEB-INF/jsp/message/supervisorManagement/supWorkSixMonthWarning.jsp"/>
			<forward name="supAssessNotPass" path="/WEB-INF/jsp/message/supervisorManagement/supAssessNotPass.jsp"/>
		
		</action>
		
		<!-- 异步实时更新信息提醒、预警提醒数量变化 -->
		<action path="/json/dorefresh" 
				parameter="method"
				type="com.zd.csms.message.web.action.MessageJsonAction"
				scope="request">
		</action>
	</action-mappings>
	
</struts-config>