<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

	<form-beans>
		<form-bean name="userForm" type="com.zd.csms.rbac.web.form.UserForm"></form-bean>
		<form-bean name="loginForm" type="com.zd.csms.rbac.login.web.form.LoginForm"></form-bean>
		<form-bean name="roleForm" type="com.zd.csms.rbac.web.form.RoleForm"></form-bean>
		<form-bean name="resourceForm" type="com.zd.csms.rbac.web.form.ResourceForm"></form-bean>

		<form-bean name="dealerGroupForm" type="com.zd.csms.rbac.web.form.DealerGroupForm"></form-bean>
		
		<form-bean name="brandGroupForm" type="com.zd.csms.rbac.web.form.BrandGroupForm"></form-bean>
	</form-beans>

	<global-forwards>
		<forward name="error" path="/common/500error.jsp" />
	</global-forwards>

	<action-mappings>
		<action path="/rbac/user" name="userForm" parameter="method"
			type="com.zd.csms.rbac.web.action.UserAction" scope="request">
			<forward name="user_list" path="/WEB-INF/jsp/rbac/user/user_list.jsp" />
			<forward name="add_user" path="/WEB-INF/jsp/rbac/user/add_user.jsp" />
			<forward name="upd_user" path="/WEB-INF/jsp/rbac/user/upd_user.jsp" />
			<forward name="user_list_with_role"
				path="/WEB-INF/jsp/rbac/user/user_list_with_role.jsp" />
			<forward name="user_list_without_role"
				path="/WEB-INF/jsp/rbac/user/user_list_without_role.jsp" />

			<forward name="jgy_user_list" path="/WEB-INF/jsp/rbac/user/jgy_user_list.jsp" />
			<forward name="add_jgy_user" path="/WEB-INF/jsp/rbac/user/add_jgy_user.jsp" />
			<forward name="upd_jgy_user" path="/WEB-INF/jsp/rbac/user/upd_jgy_user.jsp" />
		</action>
		<action path="/rbac/login" name="loginForm" parameter="method"
			type="com.zd.csms.rbac.login.web.action.LoginAction" scope="request">
			<forward name="login" path="/WEB-INF/jsp/rbac/login/login.jsp" />
			<forward name="change_password" path="/WEB-INF/jsp/rbac/login/change_password.jsp" />
			<forward name="main" path="/system/main.jsp" />
		</action>
		<action path="/rbac/resource" name="resourceForm" parameter="method"
			type="com.zd.csms.rbac.web.action.ResourceAction" scope="request">
			<forward name="resource_list" path="/WEB-INF/jsp/rbac/resource/resource_list.jsp" />
			<forward name="resource_node_list"
				path="/WEB-INF/jsp/rbac/resource/resource_node_list.jsp" />
			<forward name="add_resource" path="/WEB-INF/jsp/rbac/resource/add_resource.jsp" />
			<forward name="upd_resource" path="/WEB-INF/jsp/rbac/resource/upd_resource.jsp" />
			<forward name="resource_list_with_role"
				path="/WEB-INF/jsp/rbac/resource/resource_list_with_role.jsp" />
			<forward name="resource_list_without_role"
				path="/WEB-INF/jsp/rbac/resource/resource_list_without_role.jsp" />
			<forward name="resource_list_with_role_user"
				path="/WEB-INF/jsp/rbac/resource/resource_list_with_role_user.jsp" />
		</action>
		<action path="/rbac/role" name="roleForm" parameter="method"
			type="com.zd.csms.rbac.web.action.RoleAction" scope="request">
			<forward name="role_list" path="/WEB-INF/jsp/rbac/role/role_list.jsp" />
			<forward name="add_role" path="/WEB-INF/jsp/rbac/role/add_role.jsp" />
			<forward name="upd_role" path="/WEB-INF/jsp/rbac/role/upd_role.jsp" />
			<forward name="role_list_with_user"
				path="/WEB-INF/jsp/rbac/role/role_list_with_user.jsp" />
			<forward name="role_list_without_user"
				path="/WEB-INF/jsp/rbac/role/role_list_without_user.jsp" />
			<forward name="role_list_with_resource"
				path="/WEB-INF/jsp/rbac/role/role_list_with_resource.jsp" />
			<forward name="role_list_without_resource"
				path="/WEB-INF/jsp/rbac/role/role_list_without_resource.jsp" />
		</action>

		<action path="/rbac/dealerGroup" name="dealerGroupForm"
			parameter="method" type="com.zd.csms.rbac.web.action.DealerGroupAction"
			scope="request">
			<forward name="group_list"  path="/WEB-INF/jsp/rbac/dealerGroup/group_list.jsp" />
			<forward name="group"  path="/WEB-INF/jsp/rbac/dealerGroup/group.jsp" />
			<forward name="group_dealer" path="/WEB-INF/jsp/rbac/dealerGroup/group_dealer.jsp" />
			<forward name="group_add_dealer" path="/WEB-INF/jsp/rbac/dealerGroup/group_add_dealer.jsp" />
			<forward name="group_user"  path="/WEB-INF/jsp/rbac/dealerGroup/group_user.jsp" />
			<forward name="group_add_user"  path="/WEB-INF/jsp/rbac/dealerGroup/group_add_user.jsp" />
		</action>
		
		<!-- 品牌集体 -->
		<action path="/rbac/brandGroup" name="brandGroupForm"
			parameter="method" type="com.zd.csms.rbac.web.action.BrandGroupAction"
			scope="request">
			<forward name="group_list"  path="/WEB-INF/jsp/rbac/brandgroup/group_list.jsp" />
			<forward name="group"  path="/WEB-INF/jsp/rbac/brandgroup/group.jsp" />
			<forward name="group_brand" path="/WEB-INF/jsp/rbac/brandgroup/group_brand.jsp" />
			<forward name="group_add_brand" path="/WEB-INF/jsp/rbac/brandgroup/group_add_brand.jsp" />
			<forward name="group_user"  path="/WEB-INF/jsp/rbac/brandgroup/group_user.jsp" />
			<forward name="group_add_user"  path="/WEB-INF/jsp/rbac/brandgroup/group_add_user.jsp" />
		</action>

	</action-mappings>

</struts-config>