<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

	<form-beans>
		<form-bean name="remindAndWaringForm" type="com.zd.csms.messageAndWaring.message.web.form.market.MarkrtMessageManagerForm"></form-bean>
	    <form-bean name="businessMessageForm" type="com.zd.csms.messageAndWaring.message.web.form.business.BusinessMessageForm"></form-bean> 
	</form-beans>
	
    <global-forwards>
    	<forward name="error" path="/common/500error.jsp" />
    </global-forwards> 
  
	<action-mappings>
	   <!-- 市场部发出的消息提醒 -->
		<action path="/remindAndWaring" 
		    name="remindAndWaringForm" 
		    parameter="method"
		    type="com.zd.csms.messageAndWaring.message.web.action.market.MarketMessageManagerAction"
		    scope="request">
		    
			<forward name="msg_info_list" path="/WEB-INF/jsp/messageAndWaring/message/market/messagePage.jsp"/>
			 
			<forward name="waring_info_list" path="/WEB-INF/jsp/messageAndWaring/message/market/waringPage.jsp"/>
		</action>
		
		 <!-- 业务部发出的消息预警 -->
		<action path="/businessRemindAndWaring" 
		    name="businessMessageForm" 
		    parameter="method"
		    type="com.zd.csms.messageAndWaring.message.web.action.business.BusinessMessageManagerAction"
		    scope="request">
		   <forward name="businessWaring_info_list" path="/WEB-INF/jsp/messageAndWaring/message/business/waringPage.jsp"/>
		   <forward name="businessMessage_info_list" path="/WEB-INF/jsp/messageAndWaring/message/business/messagePage.jsp"/>
		</action>
		
		
   </action-mappings>
	
</struts-config>