<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
	<form-beans>
		<form-bean name="attendanceForm" type="com.zd.csms.attendance.web.form.AttendanceForm"></form-bean>
		<form-bean name="paymentInfoForm" type="com.zd.csms.payment.web.form.PaymentInfoForm"></form-bean>
	</form-beans>
	
  <global-forwards>
    <forward name="error" path="/common/500error.jsp" />
  </global-forwards> 
  
	<action-mappings>
	   <!-- 经销商考勤时间台账及详情 -->
		<action path="/attTime" 
		    name="attendanceForm" 
		    parameter="method" 
		    type="com.zd.csms.attendance.web.action.AttendanceAction"
		    scope="request">
			<forward name="dealerlist" path="/WEB-INF/jsp/attendance/timeset/dealer_list.jsp"/>
			<forward name="dealertimeset" path="/WEB-INF/jsp/attendance/timeset/attendanceDetail.jsp"/>
		</action>
		<!-- 考勤签到 -->
		<action path="/attSign" 
		    name="attendanceForm" 
		    parameter="method" 
		    type="com.zd.csms.attendance.web.action.AttendanceSignAction"
		    scope="request">
			<forward name="attendanceSign" path="/WEB-INF/jsp/attendance/attsign/attendanceSign.jsp"/>
			<forward name="dealer_attendanceTime" path="/WEB-INF/jsp/attendance/attsign/dealerAttendanceTime.jsp"/>
			<forward name="dealertimeset" path="/WEB-INF/jsp/attendance/attsign/attendanceUpdate.jsp"/>
		</action>
		
		<action path="/json/saveAttendanceData" 
				name="" 
				parameter="method"
				type="com.zd.csms.attendance.web.jsonaction.SaveAttendanceData"
				scope="request">
		</action>
		
		<!-- 考勤列表及考勤编辑页-->
		<action path="/attendance" 
		    name="attendanceForm" 
		    parameter="method" 
		    type="com.zd.csms.attendance.web.action.AttendanceAction"
		    scope="request">
			<forward name="attendance_list" path="/WEB-INF/jsp/attendance/attendance_list.jsp"/>
			<forward name="update_signRecord" path="/WEB-INF/jsp/attendance/update_signRecord.jsp"/>
			<forward name="signRecord_detail" path="/WEB-INF/jsp/attendance/signRecord_detail.jsp"/>
			<!-- 需求87 考勤表台账 -->
			<forward name="attendance_sheet_ledger_list" path="/WEB-INF/jsp/attendance/attendance_sheet_ledger_list.jsp"></forward>
			<!-- 需求86 每日考勤详情 -->
			<forward name="sign_record_check_sp_list" path="/WEB-INF/jsp/attendance/daily_attendance_details.jsp"></forward>
			<forward name="update_signRecordCheckSpList" path="/WEB-INF/jsp/attendance/update_daily_attendance_details.jsp"></forward>
			<forward name="search_signRecordCheckSpList_details" path="/WEB-INF/jsp/attendance/search_daily_attendance_details.jsp"></forward>
			<forward name="toApprovalPage" path="/WEB-INF/jsp/attendance/approval_signRecordCheckSpList_details.jsp"></forward>
			<forward name="ToExtSign_record_check_sp_list" path="/WEB-INF/jsp/attendance/ToExtSign_record_check_sp_list.jsp"></forward>
		</action>
		<!-- 薪酬 -->
		<action path="/paymentInfo"
		    name="paymentInfoForm" 
		    parameter="method" 
		    type="com.zd.csms.payment.web.action.PaymentInfoAction"
		    scope="request">
			<forward name="paymentInfoList" path="/WEB-INF/jsp/payment/paymentinfo/payment_info_list.jsp"/>
			<forward name="paymentInfoListApproval" path="/WEB-INF/jsp/payment/paymentinfo/payment_info_list_approval.jsp"/>
		</action>
		
		<action path="/json/savePaymentInfoData" 
				name="" 
				parameter="method"
				type="com.zd.csms.payment.web.jsonaction.SavePaymentInfoData"
				scope="request">
		</action>
		
	</action-mappings>
</struts-config>