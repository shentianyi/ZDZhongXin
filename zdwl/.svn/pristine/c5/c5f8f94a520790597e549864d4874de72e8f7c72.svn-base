html, body, div, span, iframe, h1, h2, h3, h4, h5, h6, p, pre, a, em, font, img, small, strong, b, u, i, s, dl, dt, dd, ol, ul, li, fieldset, form, label, input, textarea {
    margin: 0;
    padding: 0;
}
body {
    background-color: #e3e3e3;
    color: #323232;
    font: 12px/150% SimSun, Verdana, Arial, 'Microsoft Yahei';
}
ol, ul, li {
    list-style: outside none none;
}
img {
    border: 0 none;
}
input, a, select {
    outline: 0 none;
}
a {
    color: #606060;
    text-decoration: none;
}
a:link {
    color: #606060;
}
a:visited {
    color: #606060;
}
a:hover {
    text-decoration: underline;
}
a:active {
    color: #606060;
}
.fl {
    float: left;
}
.clearfix:after {
    clear: both;
    content: " ";
    display: block;
    height: 0;
}
.w {
    width: 1005px;
    margin: 0 auto;
    background-color: #fff;
}

/*头部*/
.header {
    position: relative;
    height: 118px;
    width: 1005px;
    background: url('../images/about_header.png');
}
.header .login {
    position: absolute;
    top: 50px;
    right: 55px;
    width: 65px;
    height: 30px;
    font: 14px/30px "Microsoft YaHei";
    text-align: center;
    color: #151920;
    border: solid #33260f 1px;
}
.header .login:hover {
    text-decoration: none;
}

/*中间内容部分*/
.center {
    min-height: 440px;
    padding: 60px 170px;
}
.center .center-title {
    color: #222;
    font: bold 14px/38px 'Microsoft Yahei';
    text-align: center;
}
.center .center-con {
    line-height: 24px;
}

/*底部*/
.footer {
    padding: 20px 0;
    line-height: 40px;
    text-align: center;
    background: url('../images/abuot_bg.png');
}
.footer .links {
    overflow: hidden;
    width: 640px;
    height: 40px;
    margin: 0 auto;
}
.footer .links .links-item {
    position: relative;
    width: 128px;
}
.footer .links .links-item:before {
    position: absolute;
    top: 10px;
    left: 0;
    content: '';
    height: 18px;
    width: 1px;
    background-color: #d7d7d7;
}
.links .links-item:first-child:before {
    content: none;
}
.footer .copyright,
.footer .contact-us{
    font-family: Arial, SimSun;
}


