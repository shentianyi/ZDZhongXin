<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

	<form-beans>
		<form-bean name="salaryForm" type="com.zd.csms.salary.web.form.SalaryForm"></form-bean>
	</form-beans>
	
  <global-forwards>
    <forward name="error" path="/common/500error.jsp" />
  </global-forwards> 
  
	<action-mappings>
		<action path="/salary" 
		    name="salaryForm" 
		    parameter="method" 
		    type="com.zd.csms.salary.web.action.SalaryAction"
		    scope="request">
			<forward name="updatebasepay" path="/WEB-INF/jsp/payment/basepay.jsp"></forward>
		</action>
	</action-mappings>
	
</struts-config>