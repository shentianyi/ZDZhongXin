<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

	<form-beans>
		<form-bean name="regionForm" type="com.zd.csms.region.web.form.RegionForm"></form-bean>
	</form-beans>
	
  <global-forwards>
    <forward name="error" path="/common/500error.jsp" />
  </global-forwards> 
  
	<action-mappings>
		<action path="/region/region" 
		    name="regionForm" 
		    parameter="method" 
		    type="com.zd.csms.region.web.action.RegionAction"
		    scope="request">
			<forward name="add_region" path="/WEB-INF/jsp/region/add_region.jsp"/>
			<forward name="upd_region" path="/WEB-INF/jsp/region/upd_region.jsp"/>
			<forward name="region_list" path="/WEB-INF/jsp/region/region_list.jsp"/>
		</action>
	</action-mappings>
	
</struts-config>